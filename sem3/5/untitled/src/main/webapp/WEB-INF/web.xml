<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>name-servlet</servlet-name>
    <servlet-class>ru.itis.NameServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>name-servlet</servlet-name>
    <url-pattern>/name</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>sendMessageServlet</servlet-name>
    <servlet-class>ru.itis.SendMessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>sendMessageServlet</servlet-name>
    <url-pattern>/sendMessage</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>getMess</servlet-name>
    <servlet-class>ru.itis.GetMessagesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getMess</servlet-name>
    <url-pattern>/getMessages</url-pattern>
  </servlet-mapping>

</web-app>